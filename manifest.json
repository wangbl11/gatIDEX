{
    "description": "Oracle Globalization Automation Technology - Recording IDE",
    "manifest_version": 2,
    "name": "GatIDEX",
    "version": "1.0.2",
    "homepage_url": "https://github.com/wangbl11/gatIDEX",
    "options_ui": {
        "page": "panel/options.html",
        "browser_style": true,
        "open_in_tab":true
    },
    "icons":
    {
        "48": "icons/icons-48.png",
        "96": "icons/icons-96.png"
    },

    "permissions": [
        "<all_urls>",
        "tabs",
        "activeTab",
        "webRequest",
        "contextMenus",
        "downloads",
        "webNavigation",
        "notifications",
        "storage"
    ],

    "content_security_policy": "script-src 'self'; object-src 'self'",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/atoms.js", "content/utils.js","content/tools.js", "content/selenium-browserbot.js",
                   "common/escape.js", "content/selenium-api.js", "content/locatorBuilders.js",
                   "content/recorder.js", "content/recorder-handlers.js", "content/command-receiver.js",
                   "content/targetSelecter.js", "content/sizzle.js","content/gatide.js"],
            "match_about_blank": false,
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["common/browser-polyfill.js", "content/prompt-injecter.js", "content/runScript-injecter.js"],
            "match_about_blank": false,
            "all_frames": true,
            "run_at": "document_start"
        }
    ],

    "background":
    {
        "scripts": ["common/uuid.js","background/tools.js","background/displayName.js","common/browser-polyfill.js", "background/background.js","common/sockjs.min.js","common/stomp.min.js",
        "panel/js/background/recorder.js","deps/idb-file-storage.js","background/gatback.js"]
    },

    "browser_action":
    {
        "default_icon": "icons/icons-48.png",
        "default_title": "GAT IDE"
    },

    "web_accessible_resources": ["page/prompt.js", "page/runScript.js"]
}
